<Window x:Class="Student_Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Student_Binding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel>
        <ListView DockPanel.Dock="Left" x:Name="list" Background="LightGray" Width="200" FontSize="15" FontWeight="Bold" HorizontalAlignment="Center"></ListView>

        <Border Height="300" BorderBrush="LightSalmon" BorderThickness="2" CornerRadius="5">
            <StackPanel DataContext="{Binding ElementName=list,Path=SelectedItem}">
                <Image Width="200" Height="150" Source="{Binding Image}"></Image>
                <TextBlock x:Name="txt1" Text="{Binding ID}" Width="100" Margin="5" FontWeight="Bold" FontSize="15"></TextBlock>
                <TextBlock x:Name="txt2" Text="{Binding Name}" Width="100" Margin="5" FontWeight="Bold" FontSize="15"></TextBlock>
                <TextBlock x:Name="txt3" Text="{Binding Grade}" Width="100" Margin="5" FontWeight="Bold" FontSize="15"></TextBlock>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
